<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:backgroundTint="@color/white"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaf1"
        android:layout_width="355dp"
        android:layout_height="245dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="350dp"
        android:background="@drawable/reg_bg_3"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="253dp"
        android:layout_height="126dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-25dp"
        android:text="Welcome Back!"
        android:textColor="@color/black"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaf1" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toRightOf="@id/leaf2"
        android:layout_marginLeft="-115dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TF1"
            android:height="50dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:textSize="22sp"
            android:textColor="#5C5C5C"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="50dp"
            android:layout_width="match_parent"
            app:endIconMode="password_toggle"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TF3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:height="10dp"
                android:background="@color/white"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#5C5C5C"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaf2"
        android:layout_width="250dp"
        android:layout_height="190dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="490dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/reg_bg_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaf3"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="610dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/reg_bg_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaf4"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="530dp"
        android:layout_marginRight="200dp"
        android:background="@drawable/reg_bg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:text="Sign In"
        android:textColor="#494848"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/leaf2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatBtn"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout1" />
    <TextView
        android:id="@+id/TVLog"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="65dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv"
        app:layout_constraintLeft_toLeftOf="@id/leaf2"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:clickable="true"

        />

</androidx.constraintlayout.widget.ConstraintLayout>