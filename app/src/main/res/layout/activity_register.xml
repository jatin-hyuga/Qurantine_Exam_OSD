<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaf1"
        android:layout_width="434dp"
        android:layout_height="225dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/reg_bg_3"

        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaf2"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/reg_bg_4"
        app:layout_constraintBottom_toTopOf="@+id/layout1"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/heading"
        android:layout_width="249dp"
        android:layout_height="103dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:fontFamily="@font/amiko_bold"
        android:text="Create Account"
        android:textColor="@color/black"

        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/leaf2"
        app:layout_constraintTop_toTopOf="@id/leaf1" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:clickable="true">

            <ImageButton
                android:id="@+id/upload_btn"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/upload_img_bg"/>
            <TextView
                android:id="@+id/upload_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Profile Pic"
                android:padding="13dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"/>

        </LinearLayout>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TF1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:hint="Enter UserName"
            android:textColor="#5C5C5C"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TF2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:height="50dp"
            android:hint="Enter E-mail"
            android:textColor="#5C5C5C"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TF3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:height="10dp"
                android:background="@color/white"
                android:hint="Create Password"
                android:inputType="textPassword"
                android:textColor="#5C5C5C"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaf3"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="610dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/reg_bg_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaf4"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="530dp"
        android:layout_marginRight="200dp"
        android:background="@drawable/reg_bg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="65dp"
        android:text="Sign Up"
        android:textColor="#494848"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatBtn"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/arrow_icon"
        android:tint="#FFCA28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout1" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:clickable="true"

        app:layout_constraintTop_toBottomOf="@id/tv1" />
</androidx.constraintlayout.widget.ConstraintLayout>