<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:background="@drawable/dialog_bg_2"
        >
        <!--inner components-->
        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="This is an unique access key to share your exam among your students."
            android:textColor="#5C5C5C"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/acesskey"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="#807F7F"
            android:background="@drawable/edit_text_bg"
            android:hint="enter access key"
            android:textColor="@color/black"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/password"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_bg"
            android:hint="enter password"
            android:textColorHint="#807F7F"
            android:textColor="@color/black"
            android:textSize="14sp"
            />



        <Button

            android:id="@+id/uploadBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"
            android:background="@drawable/btn2_bg"
            android:textSize="14sp"
            android:text="NEXT"
            android:textColor="#EFD10C" />
    </LinearLayout>

</LinearLayout>

