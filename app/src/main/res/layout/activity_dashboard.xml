<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardAct">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/dashbackg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            android:src="@drawable/hair4"
            android:layout_marginTop="30dp"
            android:id="@+id/profileimg"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/layoutforcreateExam"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/study"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutforcreateExam"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="40dp"
        android:background="#F1F1F1"
        app:layout_constraintBottom_toTopOf="@id/layoutattemptcreateExam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Create Exam "
        android:textColor="@color/black"
        android:id="@+id/createexamtext"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="to create an assesment test for  students"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createexamtext" />



    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/exam3"
        android:id="@+id/idforcreateexma"
        app:layout_constraintBottom_toBottomOf="@id/layoutforcreateExam"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="@id/layoutforcreateExam" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutattemptcreateExam"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="40dp"
        android:background="#F1F1F1"
        app:layout_constraintBottom_toTopOf="@id/layoutgetanswersheet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="NotSibling">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attempt Exam"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:id="@+id/attemptexamtext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The test is in the bag."
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/attemptexamtext"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/examsol"
        android:id="@+id/attemptexamimag"
        app:layout_constraintBottom_toBottomOf="@id/layoutattemptcreateExam"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="@id/layoutattemptcreateExam" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutgetanswersheet"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="60dp"
        android:background="#F1F1F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answersheets"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:id="@+id/answersheettext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:text="Evaluate what students have answered"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/answersheettext" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/answersheets"
        app:layout_constraintBottom_toBottomOf="@id/layoutgetanswersheet"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="@id/layoutgetanswersheet" />


</androidx.constraintlayout.widget.ConstraintLayout>