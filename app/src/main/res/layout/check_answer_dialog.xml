<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="2dp"
        android:background="@drawable/dialog_bg"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="330dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="Check Answer"
            android:textColor="@color/black"
            android:background="#EFD10C"
            android:gravity="center"
            android:textSize="20sp"
            />
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:foregroundGravity="top"
                android:gravity="top"
                android:text="Q."
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/rET"
                android:layout_width="280dp"
                android:layout_height="90dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_gravity="top"
                android:background="@color/white"
                android:backgroundTint="#F1F1F1"
                android:foregroundGravity="top"
                android:gravity="top"
                android:hint="type your question here"
                android:text="Demo question ehieufieubfpek"
                android:isScrollContainer="false"
                android:maxLength="240"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textColorHint="#6C6C6C"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:foregroundGravity="top"
                android:gravity="top"
                android:text="A."
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/rET2"
                android:layout_width="280dp"
                android:layout_height="300dp"
                android:layout_gravity="top"
                android:background="@color/white"
                android:backgroundTint="#F1F1F1"
                android:foregroundGravity="top"
                android:gravity="top"
                android:hint="type your question heriutbergbjreigjbrjgjnrtginrigtnie"
                android:text="Demo question ee"
                android:inputType="textMultiLine|textNoSuggestions"
                android:isScrollContainer="false"
                android:maxLength="240"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textColorHint="#6C6C6C"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mark_icon"
                android:paddingRight="5dp"/>

            <EditText
                android:id="@+id/markstext"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:background="@color/white"
                android:backgroundTint="#F1F1F1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:foregroundGravity="top"
                android:gravity="top"
                android:hint="allot marks"
                android:inputType="textMultiLine|textNoSuggestions"
                android:isScrollContainer="false"
                android:maxLength="240"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textColorHint="#6C6C6C"
                android:textSize="18sp"
                tools:ignore="RtlCompat" /> />


        </LinearLayout>

        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"
            android:background="@drawable/btn_bg"
            android:textSize="12sp"
            android:text="Done"
            android:textColor="#FFF" />
    </LinearLayout>

</LinearLayout>

